{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "filetypes": [ "cpp", "c", "objc", "rust" ],
	  "default": true,
	  "configuration": {
        "request": "launch",
		"program": "${workspaceRoot}/main",
        "args": [ "debug" ],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
		"setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
		]
      }
    },
    "Attach": {
      "adapter": "vscode-cpptools",
      "filetypes": [ "cpp", "c", "objc", "rust" ],
      "configuration": {
        "request": "attach",
        "program": "${workspaceRoot}/main",
        "MIMode": "gdb"
      }
    }
  }
}
